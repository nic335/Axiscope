
{% block body %}
  <div class="col p-3">
    <div class="border border-secondary-subtle rounded bg-body-tertiary p-2">
      <div class="row p-2 pb-2">
        {% include "camera.jinja" %}
      </div>

      <div class="row p-2">
        <div class="col-1">
          <i class="bi bi-zoom-out"></i>
        </div>
        <div class="col-10">
          <input type="range" class="form-range" min="0" max="6" id="zoom-range">
        </div>
        <div class="col-1">
          <i class="bi bi-zoom-in"></i>
        </div>
      </div>

      <div class="row p-2">
        <div class="col-1">
          <i class="bi bi-brightness-low"></i>
        </div>
        <div class="col-10">
          <input type="range" class="form-range" min="0" max="6" id="contrast-range">
        </div>
        <div class="col-1">
          <i class="bi bi-brightness-high"></i>
        </div>
      </div>

      {% include "position.jinja" %}
    </div>
  </div>


  {% include "tools.jinja" %}


{% endblock body %}